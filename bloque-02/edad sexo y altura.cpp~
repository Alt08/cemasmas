#include <iostream>
using namespace std;

int main(){
	
	int edad;
	float altura;
	char sexo[10]; //a la variable char le damos una longuitud de 10 espacios
	
	cout << "Cuantos anios tienes: "; 	cin>>edad;
	cout << "Cual es tu altura: "; 		cin>>altura;
	cout << "Sexo: "; 					cin>>sexo;
	
	cout << "\nSu edad es: "<<edad<<" anios"<<endl;
	cout << "Su altura es: "<<altura<<" M"<<endl;
	cout << "Su sexo es: "<<sexo<<endl;
	
	return 0;
}
