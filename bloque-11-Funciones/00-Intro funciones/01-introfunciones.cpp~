// La funcion tiene que ser el mismo tipo de dato entero = entero
// VOID es una funcion vacia

/*
    tipo nombre(tipo var1, tipo, var2){
        intrucciones
    }   

    Ejemplo:

    --> int NumMax(int x, int y)
    --> double intercambio(double x, double y)
    --> void desplegar (float x, floatx)

*/


// Encontrar el mayor de los numeros

#include <iostream>
using namespace std;

// Prototipo de funcion
int encontrarMax(int x, int y);

int main(){
    int a, b;
    // Podemos crear una nueva variable donde guardaremos el mayor o imprimir directamente donde invocamos la funcion y enviamos los datos
    // int mayor;
    cout<<"Introduce 2 numeros: ";
    cin>>a>>b;

    // mayor =  encontrarMax(a, b);
    cout<<"El mayor es: "<<encontrarMax(a, b)<<endl;

    return 0;
}

// Definicion de funcion
int encontrarMax(int x, int y){
    int numMax;

    if(x>y){
        numMax = x;
    }else{
        numMax = y;
    }

    return numMax;
}
